<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="../../../leaflet/dist/leaflet.css" />
		<link rel="stylesheet" href="../dist/leaflet.toolbar.css"/>
		<script src="../../../leaflet/dist/leaflet-src.js"></script>
		<script src="../dist/leaflet.toolbar-src.js"></script>
    <style>
        html, body, #map { margin: 0; height: 100%; width: 100%; }
    </style>
</head>
<body>
    <div id="map"></div>
    <script>
        var map = L.map('map').setView([41.7896, -87.5996], 2);

        L.tileLayer("http://t0.tianditu.cn/DataServer?T=img_c&X={x}&Y={y}&L={z}", {
            attribution: '<a href="http://openstreetmap.org/copyright">OpenStreetMap Contributors</a>'
        }).addTo(map);

        var MyCustomAction = L.ToolbarAction.extend({

            options: {
                toolbarIcon: {
                    html: '&#9873;',
                    tooltip: 'Go to the Eiffel Tower'
                }
            },

            addHooks: function () {
                map.setView([48.85815, 2.29420], 8);
            }

        });

        new L.Toolbar.Control({
            actions: [MyCustomAction]
        }).addTo(map);
    </script>
</body>
</html>
